page {
  background-color: #FFFFFF;
}
.book-info .book-box {
  height: 400rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.book-info .book-box .book-cover {
    width: 375rpx;
}
.book-info .book-box .book-cover uni-image {
      width: 240rpx;
      height: 300rpx;
      border-radius: 10rpx;
      margin-left: 67rpx;
      margin-top: 50rpx;
}
.book-info .book-box .book-des {
    width: 375rpx;
    margin-top: 50rpx;
}
.book-info .book-box .book-des .title {
      font-size: 34rpx;
      letter-spacing: 1rpx;
      color: #000000;
}
.book-info .book-statistics {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.book-info .book-statistics .item {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    font-size: 30rpx;
}
.book-info .book-statistics .item .count {
      text-align: center;
      line-height: 1.5;
}
.book-info .book-statistics .item .name {
      text-align: center;
      line-height: 1.1;
      font-size: 28rpx;
      font-weight: 600;
      color: #000000;
}
.book-info .other-info {
  margin-top: 100rpx;
}
.book-info .other-info .other-item .item-title {
    padding-left: 30rpx;
    color: #000000;
    font-size: 32rpx;
    line-height: 2;
    letter-spacing: 3rpx;
    font-weight: 600;
}
.book-info .other-info .other-item .item-content {
    color: #3F536E;
    padding: 0 30rpx;
    font-size: 28rpx;
    line-height: 1.5;
}
.book-info .comment {
  margin-top: 100rpx;
}
.book-info .comment .comment-title {
    padding: 0 40rpx;
}
.book-info .comment .comment-title .title {
      font-size: 32rpx;
      line-height: 2;
      color: #2C405A;
}
.book-info .comment .comment-title .desc {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      font-size: 28rpx;
      letter-spacing: 2rpx;
}
.book-info .comment .comment-title .desc .count {
        color: #999;
}
.book-info .comment .comment-title .desc .operating {
        color: #13bfa3;
}
.book-info .fixed-module {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  width: 100%;
  background-color: #FFFFFF;
  border-top: 2rpx solid #CCCCCC;
}

