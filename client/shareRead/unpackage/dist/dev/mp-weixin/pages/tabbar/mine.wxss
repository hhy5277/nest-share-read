.box {
  width: 100%;
}
.box .zhanwei {
    width: 100%;
    height: 25px;
    background: #13bfa3;
}
.box .header {
    background: #13bfa3;
    width: 92%;
    height: 36vw;
    padding: 0 4%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.box .header .userinfo {
      width: 100%;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
}
.box .header .userinfo .face {
        -webkit-flex-shrink: 0;
                flex-shrink: 0;
        width: 120rpx;
        height: 120rpx;
        border: 2rpx solid #2d88d5;
        border-radius: 50%;
}
.box .header .userinfo .face image {
          width: 100%;
          height: 100%;
          border-radius: 100%;
}
.box .header .userinfo .info {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-flex-flow: wrap;
                flex-flow: wrap;
        padding-left: 30rpx;
        width: calc(100% - 240rpx);
}
.box .header .userinfo .info .username {
          width: 100%;
          color: #fff;
          font-size: 34rpx;
          font-weight: normal;
}
.box .header .userinfo .info .integral {
          display: -webkit-box;
          display: -webkit-flex;
          display: flex;
          -webkit-box-align: center;
          -webkit-align-items: center;
                  align-items: center;
          padding: 0 20rpx;
          height: 40rpx;
          color: #fff;
          background-color: #2d88d5;
          border-radius: 20rpx;
          font-size: 24rpx;
}
.box .header .userinfo .setting {
        color: #fff;
        font-size: 28rpx;
        margin-right: 10rpx;
        margin-left: 10rpx;
}
.box .header .userinfo .setting .iconfont {
          font-size: 40rpx;
}
.box .content {
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx;
    background: #fff;
}
.box .content .list {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      height: 105rpx;
}
.box .content .list .left {
        width: 68rpx;
        height: 100%;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
}
.box .content .list .left .iconfont {
          font-size: 56rpx;
          width: 40rpx;
}
.box .content .list .right {
        width: 100%;
        height: 100%;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: justify;
        -webkit-justify-content: space-between;
                justify-content: space-between;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        box-sizing: border-box;
        border-bottom: 1rpx solid #eaeaea;
}
.box .content .list .right view:nth-child(1) {
          font-size: 30rpx;
          color: #424242;
}
.box .content .list .right .iconfont {
          font-size: 30rpx;
          color: #999;
}
.box .content .list:last-child .right {
      border-bottom: none;
}
.box .contBot {
    margin-top: 20rpx;
}
.box .btn {
    width: 100%;
    height: 105rpx;
    background: #fff;
    margin-top: 20rpx;
    text-align: center;
    line-height: 105rpx;
    color: #000;
    font-size: 30rpx;
}

